[package]
summary = A Zeek OSPF packet analyzer, based on Spicy.
description = A Zeek OSPF packet analyzer, based on Spicy.
script_dir = analyzer
plugin_dir = build/spicy-modules
build_command = unset -v CXX CXXFLAGS LD LDFLAGS && mkdir -p build && cd build && cmake .. && cmake --build .
test_command = unset -v CXX CXXFLAGS LD LDFLAGS && cd tests && PATH=$(zkg config plugin_dir)/packages/spicy-plugin/bin:$PATH btest -d -j $(nproc)

[template]
source = package-template-spicy
version = master
zkg_version = 2.12.0

[template_vars]
namespace = zeek_spicy_ospf
name = OSPF
